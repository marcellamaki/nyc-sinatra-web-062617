<h1>Edit figure</h1>
<form action="/figures/<%=@figure.id%>" method="POST">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br></br>
  <label>Choose from existing landmarks:</label><br></br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id%>"
        value ="<%= landmark.id%>"
        <%="checked" if @figure.landmarks.include?(landmark) %> >
        <%=landmark.name%>
      <br></br>
    </input>
  <% end %>
  <br></br>
  <label>Create a new landmark:</label>
  <br></br>
  <label>Name:</label>
  <input type="text" name="landmark[name]"  id="new_landmark"> </input>
  <label>Year Completed:</label>
  <input type="number" name="landmark[year_completed]"> </input>
  <br></br>
  <br></br>
  <label>Choose from existing title:</label><br></br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.id%>"
        value ="<%= title.id%>"
        <%="checked" if @figure.titles.include?(title) %> >
        <%=title.name%>
      <br></br>
    </input>
  <% end %>
  <br></br>
  <label>Create a new title:</label>
  <br></br>
  <label>Name:</label>
  <input type="text" name="title[name]"> </input>
  <br></br>

  <input type="submit" value="Edit Figure"> </input>

</form>
